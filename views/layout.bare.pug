doctype html
block variables

html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    base(href='/')
        
    title #{title} - [it-hindus]
    link(href='/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    link(href='/font-awesome/css/font-awesome.css', rel='stylesheet', type='text/css')
    link(href='/css/plugins/iCheck/custom.css', rel='stylesheet', type='text/css')
    link(href='/css/plugins/toastr/toastr.min.css', rel='stylesheet', type='text/css')
    link(href='/css/animate.css', rel='stylesheet', type='text/css')
    link(href='/css/style.css', rel='stylesheet', type='text/css')
    
    
    block head
  
  body.gray-bg
    block content
    
    // Mainly scripts
    script(src='/js/jquery-3.1.1.min.js')
    script(src='/js/popper.min.js')
    script(src='/js/bootstrap.js')
      
    // iCheck
    script(src='/js/plugins/iCheck/icheck.min.js')
    
    // Toastr
    script(src='/js/plugins/toastr/toastr.min.js')
    
    include partials/flash
    
    script.
      $(document).ready(function() {
        $('.i-checks').iCheck({
          checkboxClass: 'icheckbox_square-green',
          radioClass: 'iradio_square-green',
        });
      });
